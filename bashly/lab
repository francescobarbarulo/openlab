# :command.initialize
initialize() {
  version="0.1.0"
  long_usage=''
  set -e

  # :command.environment_variables_default
  export ENV="${ENV:-dev}"

}

# :command.run
run() {
  declare -g -A args=()
  declare -g -A deps=()
  declare -g -a other_args=()
  declare -g -a env_var_names=()
  declare -g -a input=()
  normalize_input "$@"
  parse_requirements "${input[@]}"

  case "$action" in
    "list") lab_list_command ;;
    "get") lab_get_command ;;
    "create") lab_create_command ;;
    "delete") lab_delete_command ;;
    "start") lab_start_command ;;
    "stop") lab_stop_command ;;
  esac
}

initialize
run "$@"
